@{
}
@model List<Customers>

<h2>Customers</h2>
<body>
    @if (@Model.Count == 0)
    {
        <h4>No Customers Yet</h4>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <tr>
                <th> Customer Name</th>
            </tr>

            @foreach (var customer in @Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(@customer.Name, "GetCustomer", "Customer", new { id = @customer.Id }, null)

                    </td>
                </tr>

            }



        </table>
    }

</body>